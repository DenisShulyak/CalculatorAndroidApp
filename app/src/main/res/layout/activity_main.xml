<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/row1Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"
        android:maxHeight="80dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/row1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_light"
            android:text="AC"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_light"
            android:text="+/-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonProc"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_light"
            android:text="%"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_yellow"
            android:text="รท"
            android:textSize="24sp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/row2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row1Layout"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/button7"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="7"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="8"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="9"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_yellow"
            android:text="x"
            android:textSize="24sp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/row3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row2Layout"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/button4"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="4"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="5"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="6"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_yellow"
            android:text="-"
            android:textSize="24sp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/row4Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row3Layout"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/button1"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="1"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="2"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="3"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_yellow"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/row5Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row4Layout"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8">

        <Button
            android:id="@+id/button0"
            android:layout_width="25dp"
            android:layout_height="90dp"
            android:layout_weight="2"
            android:background="@drawable/circle_button_dark"
            android:text="0"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:paddingLeft="40dp"/>

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_dark"
            android:text="."
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_yellow"
            android:text="="
            android:textSize="24sp"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>